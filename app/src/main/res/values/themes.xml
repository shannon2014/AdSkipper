<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Base Application Theme - Default (Dark Blue) -->
    <style name="Theme.AdSkipper" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/primary_blue_dark</item>
        <item name="colorAccent">@color/primary_blue_light</item>

        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Custom Attributes -->
        <item name="backgroundColor">@color/background_dark</item>
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="cardBackgroundColorElevated">@color/background_card_elevated</item>
        <item name="primaryTextColor">@color/text_primary</item>
        <item name="secondaryTextColor">@color/text_secondary</item>
        <item name="tertiaryTextColor">@color/text_tertiary</item>
        <item name="iconTint">@color/primary_blue</item>
        <item name="dividerColor">@color/divider</item>
    </style>
    
