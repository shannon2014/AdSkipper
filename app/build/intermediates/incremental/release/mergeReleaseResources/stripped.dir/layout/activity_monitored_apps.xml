<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backgroundColor">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt; Settings"
            android:textColor="?attr/iconTint"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btn_select_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_all"
            android:textColor="?attr/iconTint"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/manage_target_apps"
        android:textColor="?attr/primaryTextColor"
        android:textSize="28sp"
        android:fontFamily="sans-serif-medium"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="12dp" />

    <!-- Search Bar -->
    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="12dp"
        android:background="?attr/cardBackgroundColor"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="12dp"
        android:drawableTint="?attr/tertiaryTextColor"
        android:hint="@string/search_apps"
        android:textColorHint="?attr/tertiaryTextColor"
        android:textColor="?attr/primaryTextColor"
        android:paddingHorizontal="16dp"
        android:inputType="text"
        android:singleLine="true" />

    <!-- Tab Bar: All Apps / Recently Used -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="12dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_tab_all"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/all_apps"
            android:textColor="@color/white"
            app:backgroundTint="?attr/iconTint"
            app:cornerRadius="8dp"
            android:layout_marginEnd="8dp"
            android:textAllCaps="false"
            android:textSize="13sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_tab_recent"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/recently_used"
            android:textColor="?attr/secondaryTextColor"
            app:backgroundTint="?attr/cardBackgroundColor"
            app:cornerRadius="8dp"
            android:textAllCaps="false"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- Service Active Notice -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="?attr/cardBackgroundColor"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_dialog_info"
                    app:tint="?attr/iconTint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service_active"
                    android:textColor="?attr/iconTint"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_monitoring_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/service_active_desc"
                android:textColor="?attr/secondaryTextColor"
                android:textSize="13sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- App List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_apps"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false" />

</LinearLayout>
